<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appwidget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/text_streaks_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/layout_last_7_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_streaks_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/day1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="2dp"
            android:importantForAccessibility="no"
            android:src="@drawable/shape_dot_outline" />

        <ImageView
            android:id="@+id/day2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="2dp"
            android:importantForAccessibility="no"
            android:src="@drawable/shape_dot_outline" />

        <ImageView
            android:id="@+id/day3"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="2dp"
            android:importantForAccessibility="no"
            android:src="@drawable/shape_dot_outline" />

        <ImageView
            android:id="@+id/day4"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="2dp"
            android:importantForAccessibility="no"
            android:src="@drawable/shape_dot_outline" />

        <ImageView
            android:id="@+id/day5"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="2dp"
            android:importantForAccessibility="no"
            android:src="@drawable/shape_dot_outline" />

        <ImageView
            android:id="@+id/day6"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="2dp"
            android:importantForAccessibility="no"
            android:src="@drawable/shape_dot_outline" />

        <ImageView
            android:id="@+id/day7"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="2dp"
            android:importantForAccessibility="no"
            android:src="@drawable/shape_dot_outline" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_status_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_last_7_days"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/dialog_pending"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>